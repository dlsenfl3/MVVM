<Window x:Class="MVVM_Basics.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVVM_Basics"
        xmlns:views="clr-namespace:MVVM_Basics.Views"
        xmlns:viewModels="clr-namespace:MVVM_Basics.ViewModels"
        mc:Ignorable="d"
        Title="MVVM_Basic" Height="450" Width="800">

    <Window.Resources>
        <DataTemplate DataType="{x:Type viewModels:AViewModel}">
            <views:AView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:BViewModel}">
            <views:BView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:CViewModel}">
            <views:CView/>
        </DataTemplate>
    </Window.Resources>
    
    <Grid Margin="5">

        <ContentControl Content="{Binding CurrentViewModel}"/>

    </Grid>
</Window>
